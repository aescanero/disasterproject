<network>
  <name>{{ network_name }}</name>
  <domain name="{{ network_name }}.local"/>
  <dns>
    <forwarder addr="8.8.8.8"/>
  </dns>
  <forward mode='nat'>
    <nat>
      <port start='1' end='65535'/>
    </nat>
  </forward>
  <bridge name='{{ network_name }}' stp='on' delay='0'/>
  <ip address='{{ network }}.1' netmask='{{ netmask }}'>
    <dhcp>
      <range start='{{ network }}.2' end='{{ network }}.254'/>
    </dhcp>
  </ip>
</network>
