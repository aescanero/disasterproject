<network>
  <name>{{ network_name }}</name>
  <forward mode='nat'>
    <nat>
      <port start='1' end='65535'/>
    </nat>
  </forward>
  <bridge name='{{ network_name }}' stp='on' delay='0'/>
  <ip address='{{ host_ip }}' netmask='{{ host_netmask }}'>
    <dhcp>
      <range start='192.168.8.250' end='192.168.8.254'/>
    </dhcp>
  </ip>
</network>
